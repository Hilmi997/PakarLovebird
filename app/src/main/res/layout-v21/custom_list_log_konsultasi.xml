<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
            android:id="@+id/tvID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID                     :"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_below="@id/tvID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil Penyakit:"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:text="Hasil Gejala    :"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv2"
            android:text="Hasil Solusi    :"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="99dp">
            <TextView
                android:id="@+id/tv_custom_ID_res_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:text="ID"/>
            <TextView
                android:id="@+id/result_log_penyakit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="result penyakit"/>
            <TextView
                android:id="@+id/result_log_gejala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="result gejala"/>
            <TextView
                android:id="@+id/result_log_solusi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="result solusi"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>